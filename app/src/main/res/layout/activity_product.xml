<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="br.com.battista.myoffers.ProductActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tlbApp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:labelFor="@+id/lblCodeProduct"
                android:text="@string/label_product"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblCodeProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:text="7793100111143"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnEditProduct"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_edit_product" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblDescProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Caneca Java"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/tblProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:layout_margin="3dp"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex01_produto_caneca_java" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/lblCategory"
                        android:text="@string/label_category"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblCategory"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Casa" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/lblBrand"
                        android:text="@string/label_brand"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblBrand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Caneca" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/lblVendor"
                        android:text="@string/label_vendor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblVendor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Nerd Store" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/lblAveragePrice"
                        android:text="@string/label_average_price"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblAveragePrice"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="30.00" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_desc_price"
            android:textSize="11sp"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>