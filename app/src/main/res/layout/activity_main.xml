<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="br.com.battista.myoffers.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tlbApp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_product"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnScanProduct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_bar_code_scan" />

            <ImageButton
                android:id="@+id/btnSearchProduct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_search" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/lblLastProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/label_last_products"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnProduct01"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex01_produto_caneca_java" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnProduct01"
                        android:gravity="center_horizontal"
                        android:text="Casa: Caneca Java"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnProduct02"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex02_produto_boneco_android" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnProduct02"
                        android:gravity="center_horizontal"
                        android:text="Brinquedo: Boneco Java"
                        android:textStyle="bold" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnProduct03"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex03_produto_novo" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnProduct03"
                        android:gravity="center_horizontal"
                        android:text="Alimento: Chá de Hortelã"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnProduct04"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex03_produto_novo" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnProduct04"
                        android:gravity="center_horizontal"
                        android:text="Higiene: Creme Dental Colgate"
                        android:textStyle="bold" />
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnProduct05"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex03_produto_novo" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnProduct05"
                        android:gravity="center_horizontal"
                        android:text="Casa: Porta Retrato Metálico"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnProduct06"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ex03_produto_novo" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnProduct06"
                        android:gravity="center_horizontal"
                        android:text="Alimento: Biscoito Amanteigado Aymore"
                        android:textStyle="bold" />
                </RelativeLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
